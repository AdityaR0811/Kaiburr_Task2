{
  "info": {
    "name": "Kaiburr Task 1 API",
    "description": "Secure Task Execution Service - Complete API Collection\n\nAuthor: Aditya R.\nVersion: 1.0.0\nLicense: MIT",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "correlation_id",
      "value": "{{$randomUUID}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task - Echo",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Correlation-Id",
                "value": "{{correlation_id}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"task-echo\",\n  \"name\": \"Echo Hello Task\",\n  \"owner\": \"Aditya R.\",\n  \"command\": \"echo Hello from Kaiburr\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tasks",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks"]
            },
            "description": "Create a task that echoes a message"
          },
          "response": []
        },
        {
          "name": "Create Task - System Info",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Correlation-Id",
                "value": "{{correlation_id}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"task-uname\",\n  \"name\": \"System Info Task\",\n  \"owner\": \"Aditya R.\",\n  \"command\": \"uname -a\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tasks",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks"]
            },
            "description": "Create a task that shows system information"
          },
          "response": []
        },
        {
          "name": "Create Task - Date",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Correlation-Id",
                "value": "{{correlation_id}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"task-date\",\n  \"name\": \"Current Date Task\",\n  \"owner\": \"Aditya R.\",\n  \"command\": \"date\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tasks",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks"]
            },
            "description": "Create a task that shows current date/time"
          },
          "response": []
        },
        {
          "name": "Create Task - Whoami",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Correlation-Id",
                "value": "{{correlation_id}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"task-whoami\",\n  \"name\": \"Current User Task\",\n  \"owner\": \"Aditya R.\",\n  \"command\": \"whoami\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tasks",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks"]
            },
            "description": "Create a task that shows current user"
          },
          "response": []
        },
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Correlation-Id",
                "value": "{{correlation_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/tasks?page=0&size=10",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks"],
              "query": [
                {
                  "key": "page",
                  "value": "0",
                  "description": "Page number (0-indexed)"
                },
                {
                  "key": "size",
                  "value": "10",
                  "description": "Page size"
                }
              ]
            },
            "description": "Get all tasks with pagination"
          },
          "response": []
        },
        {
          "name": "Get Task by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Correlation-Id",
                "value": "{{correlation_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/tasks/task-echo",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks", "task-echo"]
            },
            "description": "Get a specific task by ID"
          },
          "response": []
        },
        {
          "name": "Search Tasks by Name",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Correlation-Id",
                "value": "{{correlation_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/tasks/search?name=Task",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks", "search"],
              "query": [
                {
                  "key": "name",
                  "value": "Task",
                  "description": "Name substring to search for (case-insensitive)"
                }
              ]
            },
            "description": "Search tasks by name (case-insensitive contains)"
          },
          "response": []
        },
        {
          "name": "Execute Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "X-Correlation-Id",
                "value": "{{correlation_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/tasks/task-echo/executions",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks", "task-echo", "executions"]
            },
            "description": "Execute a task's command and record the execution"
          },
          "response": []
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "X-Correlation-Id",
                "value": "{{correlation_id}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/tasks/task-date",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks", "task-date"]
            },
            "description": "Delete a task by ID"
          },
          "response": []
        }
      ]
    },
