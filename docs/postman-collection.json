  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Log author and timestamp for screenshots",
          "console.log('='.repeat(50));",
          "console.log('Author: Aditya R.');",
          "console.log('Timestamp: ' + new Date().toLocaleString());",
          "console.log('Correlation ID: ' + pm.variables.get('correlation_id'));",
          "console.log('='.repeat(50));"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Log response details",
          "console.log('Response Status: ' + pm.response.code);",
          "console.log('Response Time: ' + pm.response.responseTime + 'ms');",
          "",
          "// Check for correlation ID header",
          "if (pm.response.headers.has('X-Correlation-Id')) {",
          "    console.log('Correlation ID: ' + pm.response.headers.get('X-Correlation-Id'));",
          "}"
        ]
      }
    }
