              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"command\": \"sudo whoami\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/validation/command",
              "host": ["{{base_url}}"],
              "path": ["api", "validation", "command"]
            },
            "description": "Validate an invalid command with sudo"
          },
          "response": []
        }
      ]
    },
